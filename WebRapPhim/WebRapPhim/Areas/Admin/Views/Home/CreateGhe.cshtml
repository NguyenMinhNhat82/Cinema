@model WebRapPhim.Models.Ghe
@using WebRapPhim.Models;
@using System.Data.SqlClient;
@{
    AppXemPhimEntities1 db = new AppXemPhimEntities1();
    ViewBag.Title = "CreateGhe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .btl-left {
        font-size: 18px;
        margin-top: 20px;
        margin-left: 5%;
    }

        .btl-left a {
            display: inline-block;
            padding: 8px 15px;
            background-color: #292424;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btl-left > a:hover {
            color: black;
            background-color: white;
        }
</style>
<div class="btl-left">
    @Html.ActionLink("Trở về danh sách", "Ghe")
</div>
<h3 class="text-danger text-center">@ViewBag.Message</h3>

<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="">

                            <p class="text-center h1" style="margin-top:-2%; margin-bottom:2%">Thêm Phòng</p>

                            <form class="mx-1 mx-md-4" action="/Admin/Home/CreateGhe" method="post">

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Mã Ghế</label>
                                        <input type="text" id="form3Example1c" name="ID" class="form-control" required />
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example3c">Trạng thái</label>
                                        <select id="form3Example3c" name="trang_thai" class="form-select" required>
                                            <option value="1">Còn chỗ</option>
                                            <option value="2">Hết chỗ</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example3c">Phòng</label>
                                        <select id="form3Example3c" name="PhongID" class="form-select" required>
                                            <option value="">Chọn Phòng</option>
                                            @foreach (var phong in db.Phong)
                                            {
                                                <option value="@phong.ID">@phong.ID </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Thêm Ghế</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>