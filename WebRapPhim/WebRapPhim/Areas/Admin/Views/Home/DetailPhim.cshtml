@model WebRapPhim.Models.Film
@using WebRapPhim.Models;
@using System.Data.SqlClient;
@{
    ViewBag.Title = "DetailPhim";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 0;
    SqlDataReader reader;
    SqlDataReader reader1;
    SqlDataReader reader2;
    string strConnect = "Data Source=VANGNGUYEN;Initial Catalog=AppXemPhim;Integrated Security=True;MultipleActiveResultSets=True;Application Name=EntityFramework";
    SqlConnection cnn = new SqlConnection(strConnect);
    SqlCommand cmd = new SqlCommand();
    cmd.CommandType = System.Data.CommandType.Text;
    cmd.Connection = cnn;
    if (cnn.State == System.Data.ConnectionState.Closed)
    {
        cnn.Open();
    }
    // Truy vấn Tên NHACUNGCAP
    cmd.CommandText = "SELECT NhaCungCap.Ten AS NhaCungCapTen, Film.Ten AS FilmTen, NhaCungCap.ID AS NhaCungCapID, Film.ID AS FilmID " +
                "FROM AppXemPhim.dbo.NhaCungCap " +
                "JOIN AppXemPhim.dbo.Film ON AppXemPhim.dbo.NhaCungCap.ID = AppXemPhim.dbo.Film.nha_cung_cap";
    cmd.Connection = cnn;
    reader = cmd.ExecuteReader();
    var table = new System.Data.DataTable();
    table.Columns.Add("NhaCungCapTen");
    table.Columns.Add("NhaCungCapID");
    while (reader.Read())
    {
        table.Rows.Add(reader["NhaCungCapTen"], reader["NhaCungCapID"]);
    }
    reader.Close();
    cnn.Close();
    // Truy vấn TheLoai
    cmd.CommandType = System.Data.CommandType.Text;
    cmd.CommandText = "SELECT TheLoai.ten_the_loai AS TheLoaiTen " +
                      "FROM AppXemPhim.dbo.TheLoai " +
                      "INNER JOIN AppXemPhim.dbo.TheLoaiPhim_Phim " +
                      "ON AppXemPhim.dbo.TheLoai.id = AppXemPhim.dbo.TheLoaiPhim_Phim.LoaiPhimID " +
                      "WHERE AppXemPhim.dbo.TheLoaiPhim_Phim.PhimID = @PhimID";
    cmd.Parameters.AddWithValue("@PhimID", Model.ID);
    cmd.Connection = cnn;

    if (cnn.State == System.Data.ConnectionState.Closed)
    {
        cnn.Open();
    }

    reader1 = cmd.ExecuteReader();
    var table1 = new System.Data.DataTable();
    table1.Columns.Add("TheLoaiTen");

    while (reader1.Read())
    {
        table1.Rows.Add(reader1["TheLoaiTen"]);
    }

    reader1.Close();
    cnn.Close();
}
