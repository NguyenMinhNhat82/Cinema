@model WebRapPhim.Models.Customer
@using WebRapPhim.Service
@{
    ViewBag.Title = "EditClientAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string pw = Model.Password;
    string pass = Service.decrypt(Model.Password);
}
<style>
    .btl-left {
        font-size: 18px;
        margin-bottom: 20px;
        margin-left: 2%;
    }

        .btl-left a {
            display: inline-block;
            padding: 8px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btl-left > a:hover {
            color: black;
            background-color: white;
        }
</style>

<script>
    function StateChange() {
        var pw = document.getElementById('pw').value;
        var updatepw = document.getElementById('post')
        updatepw.value = pw;
        console.log(updatepw.value)
    }
</script>
<h2 style="text-align: center; margin-top: 2%;">Edit Client Account</h2>
<h3 class="text-danger text-center">@ViewBag.Message</h3>
<div class="btl-left">
    @Html.ActionLink("Back to List", "ClientAccount")
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">

                            <div class="form-horizontal">
                                <h4 style="text-align:center; margin-top:-2%">Customer</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)

                                <div class="form-group">
                                    <span>Số điện thoại</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Password</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => pass, new { htmlAttributes = new { @class = "form-control", @onChange = "StateChange()", @id = "pw" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Email</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Họ</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Tên</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Ngày sinh</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Ngày đăng ký</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgayDangKi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgayDangKi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Giới tính</span>
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.GioiTinh)
                                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Điểm thưởng</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DiemThuong, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiemThuong, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Loại thành viên</span>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LoaiThanhVien, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LoaiThanhVien, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="text" value="@Service.decrypt(Model.Password)" style="margin-top:2%" id="post" name="post" hidden />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Xác nhận" class="btn btn-primary" style="margin-top:2%" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

