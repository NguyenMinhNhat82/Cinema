@model WebRapPhim.Models.Ghe

@{
    ViewBag.Title = "DeleteGhe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .btl-left {
        font-size: 18px;
        margin-bottom: 20px;
        margin-left: 2%;
    }

        .btl-left a {
            display: inline-block;
            padding: 7px 10px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight:;
            transition: background-color 0.3s ease;
        }

        .btl-left > a:hover {
            color: black;
            background-color: white;
        }
</style>
<h2 style="text-align: center; margin-top: 2%;">Xoá Ghế</h2>

<h3 class="text-danger" style="margin-left:5%">Bạn có chắc chắn muốn xoá ghế này?</h3>
<div>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <dl class="dl-horizontal">
                                <dt>
                                    <p>Ghế</p>
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ID)
                                </dd>
                                <dt>
                                    <p>Trạng thái</p>
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TrangThai)
                                </dd>

                                <dt>
                                    <p>Phòng</p>
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PhongID)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color btl-left">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    @Html.ActionLink("Trở về danh sách", "Ghe")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
