@model WebRapPhim.Models.NhanVien

@{
    ViewBag.Title = "CreateAdminAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .btl-left {
        font-size: 18px;
        margin-top: 20px;
        margin-left: 5%;
    }

        .btl-left a {
            display: inline-block;
            padding: 8px 15px;
            background-color: #292424;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btl-left > a:hover {
            color: black;
            background-color: white;
        }
</style>
<div class="btl-left">
    @Html.ActionLink("Back to List", "AdminAccount")
</div>
<h3 class="text-danger text-center">@ViewBag.Message</h3>
<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="">

                            <p class="text-center h1" style="margin-top:-2%; margin-bottom:2%">Create Admin Account</p>

                            <form class="mx-1 mx-md-4" action="/Admin/Home/CreateAdminAccount" method="post">

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" id="form3Example1c" name="Ho" class="form-control" required />
                                        <label class="form-label" for="form3Example1c">Họ</label>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" id="form3Example1c" name="Ten" class="form-control" required />
                                        <label class="form-label" for="form3Example1c">Tên</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" id="form3Example3c" name="TenTK" class="form-control" required />
                                        <label class="form-label" for="form3Example3c">Tên tài khoản</label>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" id="form3Example4cd" name="Password" class="form-control" required />
                                        <label class="form-label" for="form3Example4cd">Mật khẩu</label>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" id="form3Example4cd" name="SDT" class="form-control" required />
                                        <label class="form-label" for="form3Example4cd">Số điện thoại</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4" style="gap:50px">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <label class="form-label" for="form3Example4cd">Giới tính</label>
                                    <div class="form-outline flex-fill mb-0">

                                        <input type="radio" id="html" name="sex" value="Nam" checked />
                                        <label for="html">Nam</label><br>
                                        <input type="radio" id="html" name="sex" value="Nữ" />
                                        <label for="html">Nữ</label><br>

                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="date" id="form3Example4c" name="NgaySinh" class="form-control" required />
                                        <label class="form-label" for="form3Example4c">Ngày sinh</label>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="date" id="form3Example4c" name="NgayVaoLam" class="form-control" required />
                                        <label class="form-label" for="form3Example4c">Ngày vào làm</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                                </div>

                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
