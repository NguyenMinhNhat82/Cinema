@model IEnumerable<WebRapPhim.Models.NhanVien>

@{
    ViewBag.Title = "AdminAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .btl-left {
        font-size: 18px;
        margin-top: 20px;
        margin-left: 85%;
    }

        .btl-left a {
            display: inline-block;
            padding: 8px 15px;
            background-color: #292424;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btl-left > a:hover {
            color: black;
            background-color: white;
        }
</style>
<div class="btl-left">
    <a href="/Admin/Home/CreateAdminAccount">
        + Create New User
    </a>
</div>
<h2 style="text-align:center;">Admin Account</h2>

<table class="table">
    <tr>
        <th>
            <p>Tên tài khoản</p>
        </th>
        <th>
            <p>Họ</p>
        </th>
        <th>
            <p>Tên</p>
        </th>
        <th>
            <p>Số điện thoại</p>
        </th>
        <th>
            <p>Ngày vào làm</p>
        </th>
        <th>
            <p>Giới tính</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayVaoLam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAdminAccount", new { id = item.ID }, new { @class = "btn btn-primary", style = "font-size: 15px; font-weight: bold; padding: 5px 7px; border-radius: 5px; color: #fff; background-color: #007bff; border: none;" })
            @Html.ActionLink("Details", "DetailAdminAccount", new { id = item.ID }, new { @class = "btn btn-warning", style = "font-size: 15px; font-weight: bold; padding: 5px 7px; border-radius: 5px; color: #fff;  border: none;" })
            @Html.ActionLink("Delete", "DeleteAdminAccount", new { id = item.ID }, new { @class = "btn btn-danger", style = "font-size: 15px; font-weight: bold; padding: 5px 7px; border-radius: 5px; color: #fff; border: none;" })
        </td>
    </tr>
}

</table>
