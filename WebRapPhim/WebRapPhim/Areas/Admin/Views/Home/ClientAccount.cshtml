@model IEnumerable<WebRapPhim.Models.Customer>

@{
    ViewBag.Title = "ClientAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .btl-left {
        font-size: 18px;
        margin-top: 20px;
        margin-left: 85%;   
    }

        .btl-left a {
            display: inline-block;
            padding: 8px 15px;
            background-color: #292424;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btl-left > a:hover {
            color: black;
            background-color: white;
        }
</style>
<div class="btl-left">
    <a href="/Admin/Home/CreateClientAccount" >
        + Create New User
    </a>
</div>
<h2 style="text-align:center;">Client Account</h2>
<table class="table">
    <tr>
        <th>
            <p>Số điện thoại</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <p>Họ</p>
        </th>
        <th>
            <p>Tên</p>
        </th>
        <th>
            <p>Ngày đăng ký</p>
        </th>
        <th>
            <p>Điểm thưởng</p>
        </th>
        <th>
            <p>Loại thành viên</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDangKi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiemThuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiThanhVien)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditClientAccount", new { id=item.ID }, new { @class = "btn btn-primary", style = "font-size: 15px; font-weight: bold; padding: 5px 7px; border-radius: 5px; color: #fff; background-color: #007bff; border: none;" })
            @Html.ActionLink("Details", "DetailClientAccount", new { id=item.ID }, new { @class = "btn btn-warning", style = "font-size: 15px; font-weight: bold; padding: 5px 7px; border-radius: 5px; color: #fff;  border: none;" })
            @Html.ActionLink("Delete", "DeleteClientAccount", new { id=item.ID }, new { @class = "btn btn-danger", style = "font-size: 15px; font-weight: bold; padding: 5px 7px; border-radius: 5px; color: #fff; border: none;" })
        </td>
    </tr>
}

</table>
