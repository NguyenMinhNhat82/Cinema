
@{
    ViewBag.Title = "Phone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="h-100 gradient-form" style="background-color: #eee;margin-top:40px">

    @if (TempData["PhoneErro"] != null)
    {
       
        if (int.Parse(TempData["PhoneErro"].ToString()) == 0)
        {
            <h3 class="text-danger text-center">Không tìm thấy tài khoản nào</h3>
        }
        
    }

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://res.cloudinary.com/dexbjwfjg/image/upload/v1679455931/OIP_ere1vb.jpg"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">ĐIỀN SỐ ĐIỆN THOẠI</h4>
                                </div>

                                <form action="~/App/Phone_post" method="post">


                                    <div class="form-outline mb-4">
                                        <input type="text" id="form2Example11" class="form-control"
                                               placeholder="Số điện thoại" name="phone" />
                                        <label class="form-label" for="form2Example11">Điền số điện thoại của bạn</label>
                                    </div>


                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            Tiếp
                                            Tục
                                        </button>

                                    </div>



                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <img style="width:400px" src="https://res.cloudinary.com/dexbjwfjg/image/upload/v1679455834/3_ivkng8.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

