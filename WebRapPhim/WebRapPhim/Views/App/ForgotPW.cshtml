
@{
    ViewBag.Title = "ForgotPW";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<section class="h-100 gradient-form" style="background-color: #eee;margin-top:40px">
    @if (TempData["Erro"] !=null)
    {
        if (int.Parse(TempData["Erro"].ToString()) == 1)
        {
            <h3 class="text-success text-center">Thay đổi mật khẩu thành công</h3>
        }
        if (int.Parse(TempData["Erro"].ToString()) == 0)
        {
            <h3 class="text-danger text-center">Mật khẩu cũ sai</h3>
        }
        if (int.Parse(TempData["Erro"].ToString()) == -1)
        {
            <h3 class="text-danger text-center">Xác nhận mật khẩu mới không khớp</h3>
        }
    }

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://res.cloudinary.com/dexbjwfjg/image/upload/v1679455931/OIP_ere1vb.jpg"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">THAY ĐỔI MẬT KHẨU</h4>
                                </div>

                                <form action="~/App/ForgotPW_post" method="post">


                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example11" class="form-control"
                                               placeholder="Mật khẩu cũ" name="OldPassword" />
                                        <label class="form-label" for="form2Example11">Nhập mật khẩu cũ của bạn</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example22" class="form-control" placeholder="Mật khẩu mới" name="Password" />
                                        <label class="form-label" for="form2Example22">Nhập mật khẩu mới</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example22" class="form-control" placeholder="Xác nhận mật khẩu mới" name="ConfirmPassword" />
                                        <label class="form-label" for="form2Example22">Xác nhận lại mật khẩu mới</label>
                                    </div>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            Thay đổi
                                            mật khẩu
                                        </button>

                                    </div>



                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <img style="width:400px" src="https://res.cloudinary.com/dexbjwfjg/image/upload/v1679455834/3_ivkng8.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

