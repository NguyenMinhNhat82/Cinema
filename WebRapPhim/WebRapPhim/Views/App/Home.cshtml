    var ListSuatChieu = db.Film.ToList();
    List<Film> nowShowing = new List<Film>();
    foreach (Film i in ListSuatChieu)
    {

        if (Service.getDateSubtract(System.DateTime.Parse(i.ngay_cong_chieu.ToString()), DateTime.Now) >= 0 && Service.getDateSubtract(System.DateTime.Parse(i.ngay_cong_chieu.ToString()), DateTime.Now) <= 10)
        {
            nowShowing.Add(i);
        }

    }
    List<Phong> phong = db.Phong.ToList();
    List<NhanVien> nv = db.NhanVien.ToList();
    List<Ve> ve = db.Ve.ToList();
    List<Film> Upcoming = new List<Film>();
    foreach (Film i in ListSuatChieu)
    {
        int a = Service.getDateSubtract(System.DateTime.Parse(i.ngay_cong_chieu.ToString()), DateTime.Now);


        if (Service.getDateSubtract(DateTime.Now, System.DateTime.Parse(i.ngay_cong_chieu.ToString())) > 10 && Service.getDateSubtract(DateTime.Now, System.DateTime.Parse(i.ngay_cong_chieu.ToString())) <= 20)
        {
            Upcoming.Add(i);
        }

    }
    var eventlist = db.SuKien.ToList();
}

